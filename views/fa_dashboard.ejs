            <script>
                $( document ).ready(function() {

                    // GET REQUEST
                    ajaxGet();

                    // DO GET
                    function ajaxGet(){
                        $.ajax({
                            type : "GET",
                            url : "/litUsers",
                            success: function(result){
                                $('#clientTable').bootstrapTable({
                                    sortName: "firstName",
                                    sortOrder: "asc",
                                    data: result,
                                    formatLoadingMessage: function() {
                                        return "";
                                    }
                                })
                            },
                            error : function(e) {
                                $("#getResultDiv").html("<strong>Error</strong>");
                                console.log("ERROR: ", e);
                            }
                        });
                    }
                })
            </script>



            <script>

                $( document ).ready(function() {

                    ajaxGet();

                    // DO GET
                    function ajaxGet(){
                        $.ajax({
                            type : "GET",
                            url : "/users",
                            success: function(result){
                                $('#clientTable ul').empty();
                                $.each(result, function(i, user){
                                    $('#clientTable .table-form').append(user.firstName + " " + user.lastName + "<br>")
                                });
                                console.log("Success: ", result);

                                let col = [];
                                for (let i in result) {
                                    for (let key in result[i]) {
                                        if (col.indexOf(key) === -1) {
                                            col.push(key);
                                        }
                                    }
                                }

                                let table = document.createElement("table");
                                let tr = table.insertRow(-1);

                                for (let i = 0; i < col.length; i++) {
                                    let th = document.createElement("th")
                                    th.innerHTML = col[i];
                                    tr.appendChild(th);
                                }
                                for (let i in result) {
                                    tr = table.insertRow(-1);
                                    for (let j in result) {
                                        let tabCell = tr.insertCell(-1);
                                        tabCell.innerHTML = users[i][col[j]]
                                    }
                                }
                                let divContainer = document.getElementById("clientTable");
                                divContainer.innerHTML = "";
                                divContainer.appendChild(table);
                            },
                            error : function(e) {
                                $("#clientTable").html("<strong>Error</strong>");
                                console.log("ERROR: ", e);
                            }
                        });
                    }
                })
            </script>



                <script type="text/javascript">
                    
                    const front = io('http://localhost:8080');
                    front.on('message', addMessages)
                    getMessages()
                    function addMessages(message){
                        //console.log(message.name)
                        $("#msgs").prepend(`
                                <div class="post">
                                <h4>${message.name}</h4>
                                <p>${message.message}</p>
                                </div>`)
                    }
                    function getMessages(){
                        $.get('http://localhost:8080/messages', (data) => {
                            //console.log(data)
                            data.forEach(addMessages);
                        })
                    }
                </script>
